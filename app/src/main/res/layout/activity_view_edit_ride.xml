<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/form_layout"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/label_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/ride_date"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="20sp"
            android:textSize="20sp"
            style="@style/Widget.AppCompat.EditText"/>

        <TextView
            android:id="@+id/label_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/ride_time"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="20sp"
            android:textSize="20sp"
            style="@style/Widget.AppCompat.EditText"/>

        <TextView
            android:id="@+id/label_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/ride_distance"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/text_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="20sp"
            android:textSize="20sp"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/label_average_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/ride_average_speed"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/text_average_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="20sp"
            android:textSize="20sp"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/label_average_cadence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/ride_average_cadence"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/text_average_cadence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="20sp"
            android:textSize="20sp"
            android:inputType="number" />

        <TextView
            android:id="@+id/label_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/ride_comment"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/text_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="20sp"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:maxLength="20"/>

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="20sp"
            android:textSize="20sp"
            android:text="@string/button_save"
            android:background="@color/colorPrimaryLight"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="20sp"
            android:textSize="20sp"
            android:text="@string/button_delete"
            android:background="@color/colorDanger"
            android:textColor="@color/colorWhite"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
